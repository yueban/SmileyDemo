<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yueban.smileydemo.MainActivity">

    <com.yueban.smileydemo.gifview.MyEditTextEx
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="#f2f2f5"
        android:gravity="top"
        app:isAnimationEnable="true"
        android:lines="3"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <com.yueban.smileydemo.gifview.MyTextViewEx
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="#f2f2f5"
        android:gravity="top"
        android:lines="3"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addEmoji"
        android:text="Add Emoji"/>
</LinearLayout>
